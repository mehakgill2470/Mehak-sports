@model IEnumerable<MehakSports.Models.Brand>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BrandName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Website)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateEstablished)
                </th>
                @if (User.Identity.IsAuthenticated)
                {
                    <th></th>

                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Website)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateEstablished)
                    </td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.BrandID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.BrandID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.BrandID">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
